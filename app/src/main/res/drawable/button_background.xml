<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/bright_green"/>
            <stroke android:width="1dp" android:color="@android:color/transparent"/>
            <corners android:radius="32dp"/>
            <padding android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/cool_blue"/>
            <stroke android:width="1dp" android:color="@android:color/transparent"/>
            <corners android:radius="32dp"/>
        </shape>
    </item>
</selector>